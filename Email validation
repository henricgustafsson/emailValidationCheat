String emailRegex = "^[a-zA-Z0-9_+&*-]+(?:\\."+ 
                "[a-zA-Z0-9_+&*-]+)*@" + 
                "(?:[a-zA-Z0-9-]+\\.)+[a-z" + 
                "A-Z]{2,7}$"; 
                  
			Pattern pattern = Pattern.compile(emailRegex); 
		
			if(pattern.matcher(email).matches()) {
				this.email = email;
			}
